procedure nombreacadalineadepseudocodi {
    suma <- 0
    contador <- 0
    num <- 0
    while num >= 0 do {
        write "Dige'm un nombre (negatiu per acabar): "
        read num
        if num >= 0 then {
            suma <- suma + num
            contador <- contador + 1
        }
    }
    if contador > 0 then {
        mitjana <- suma / contador
        write "La mitjana dels nombres Ã©s: ", mitjana
}